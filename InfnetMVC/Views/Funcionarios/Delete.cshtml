@model InfnetMVC.Models.Funcionario

@{
    ViewData["Title"] = "Excluir";
}

<style>
    .cover-container {
        max-width: 80%;
        border-radius: 3rem;
    }

    .delete-box {
        width: 800px;
    }

    .card-body-2 {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    dl {
        line-height: 1.5rem;
        width: 100%;
    }

    .botoes {
        justify-content: center;
        display: flex;
        gap: 1rem;
    }

    .label {
        margin-top: 1rem;
        margin-left: 1rem;
        margin-bottom: 0.5rem;
        text-align: left;
        font-weight: bold;
    }
</style>

<div class="card shadow my-5 p-5 cover-container">
    <div class="text-center">
        <h2 class="text-center"><i class="fa-solid fa-trash-can"></i> @ViewData["Title"]</h2>
    </div>

    <div class="d-flex card-body-2 flex-column align-items-center">
        <div class="card shadow mb-5 my-3 p-3 container delete-box">
            <h4><i class="fa-solid fa-user-tie"></i> Funcionário</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Endereco)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Endereco.Bairro)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DataNascimento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Departamento)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Departamento.Local)
                </dd>
            </dl>
        </div>
        <div class="botoes">
            <form asp-action="Delete">
                <input type="hidden" asp-for="FuncionarioId" />
                <button type="submit" value="Delete" class="shadow btn btn-danger rounded-pill p-2">
                    <i class="fa fa-trash"></i>
                    <span> Excluir</span>
                </button>
                    <button asp-action="Index" class="shadow btn btn-secondary rounded-pill p-2">
                        <i class="fa-solid fa-arrow-left"></i>
                    <span> Voltar</span>
                </button>
            </form>
        </div>
    </div>
</div>