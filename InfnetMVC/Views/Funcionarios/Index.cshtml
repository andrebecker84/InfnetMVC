@model IEnumerable<InfnetMVC.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionários";
}

<style>
    .cover-container {
        max-width: 80%;
        border-radius: 3rem;
    }

    td {
        line-height: 3rem;
    }

    .wide-input-reg {
        width: 400px;
        height: 40px;
    }

    .label {
        margin-top: 1rem;
        margin-left: 1rem;
        margin-bottom: 0.5rem;
    }
</style>

<div class="card shadow p-5 cover-container">
    <h2><i class="fa-solid fa-users"></i> @ViewData["Title"]</h2>
    <hr />

    <p>
        <a class="shadow my-3 mb-4 p-2 btn btn-primary fs-5 rounded-pill" title="Criar" asp-action="Create">
            <i class="fa-solid fa-plus"></i>
            <span> Criar</span>
        </a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FuncionarioId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnderecoId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DepartamentoId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Departamento)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FuncionarioId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnderecoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Endereco.Bairro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartamentoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Departamento.Local)
                    </td>
                    <td>
                        <a class="shadow btn btn-success btn-sm rounded-circle" title="Editar" asp-action="Edit" asp-route-id="@item.FuncionarioId"><i class="fa fa-edit"></i></a><span class="opacity-0">__</span>
                        <a class="shadow btn btn-primary btn-sm rounded-circle" title="Detalhes" asp-action="Details" asp-route-id="@item.FuncionarioId"><i class="fa fa-table"></i></a><span class="opacity-0">__</span>
                        <a class="shadow btn btn-danger btn-sm rounded-circle" title="Apagar" asp-action="Delete" asp-route-id="@item.FuncionarioId"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* Filtrar por nome *@
    
        <div class="d-flex justify-content-center form-group">
            <div>
                <label class="label" for="txtNome">Filtrar por nome: </label>
                <input type="text" id="txtNome" class="shadow form-control rounded-pill wide-input-reg" />
            </div>
        </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('#txtNome').on('input', function () {
                    var filter = $(this).val().toUpperCase();
                    $('tbody tr').each(function () {
                        var nome = $(this).find('td:nth-child(2)').text().toUpperCase();
                        if (nome.indexOf(filter) > -1) {
                            $(this).show();
                        } else {
                            $(this).hide();
                        }
                    });
                });
            });
        </script>
    }
    @* Filtrar por nome *@
</div>