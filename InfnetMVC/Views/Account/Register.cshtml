@using InfnetMVC.ViewModels@model RegisterViewModel@{    ViewData["Title"] = "Registrar";}<style>    .cover-container {        max-width: 100%;        border-radius: 3rem;    }    .card-body-2 {        width: 100%;        display: flex;        flex-direction: column;        align-items: center;        gap: 5rem; /* Espaçamento entre os elementos */    }    .wide-input-reg {        width: 600px    }</style><div class="d-flex card shadow p-5 cover-container mx-auto">    <h1 class="text-center mb-5"><i class="fa-solid fa-user-plus"></i> Criar conta:</h1>    <div class="d-flex card-body-2">        <form method="post" class="needs-validation" novalidate>            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>            <div class="formulario mb-4">                <div class="form-floating mb-4">                    <input asp-for="Email" class="shadow form-control rounded-pill wide-input-reg" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" required />                    <label asp-for="Email">E-mail</label>                    <span asp-validation-for="Email" class="text-danger"></span>                </div>                <div class="form-floating mb-4">                    <input asp-for="Password" class="shadow form-control rounded-pill wide-input-reg" autocomplete="new-password" aria-required="true" placeholder="Crie a sua senha" required />                    <label asp-for="Password">Senha</label>                    <span asp-validation-for="Password" class="text-danger"></span>                </div>                <div class="form-floating mb-4">                    <input asp-for="ConfirmPassword" class="shadow form-control rounded-pill wide-input-reg" autocomplete="new-password" aria-required="true" placeholder="Confirme a sua senha" required />                    <label asp-for="ConfirmPassword">Confirmar Senha</label>                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>                </div>                <button id="registerSubmit" type="submit" class="d-flex shadow align-items-center justify-content-center my-5 mb-0 p-3 w-50 mx-auto btn btn-lg btn-success rounded-pill">Registrar</button>            </div>                    </form>    </div></div>