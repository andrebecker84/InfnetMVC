@using InfnetMVC.ViewModels

@model LoginViewModel

@{
    ViewData["Title"] = "Entrar";
}

<style>
    .cover-container {
        max-width: 80%;
        border-radius: 3rem;
    }

    .card-body-2 {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 5rem; /* Espaçamento entre os elementos */
    }

    .wide-input-reg {
        width: 600px
    }

    .checkbox {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
                  
<div class="d-flex card shadow p-5 cover-container mx-auto">
    <h2 class="text-center my-4"><i class="fa-solid fa-right-to-bracket"></i> @ViewData["Title"]</h2>
    <h3 class="text-center my-2">Acesse com a sua conta local.</h3>
    <hr />
    <div class="my-4 d-flex card-body-2">
        <form id="account" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            <div class="formulario mb-2">
                <div class="form-floating mb-4">
                    <input asp-for="Email" class="shadow form-control rounded-pill wide-input-reg" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" required />
                    <label asp-for="Email">E-mail</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    <input asp-for="Password" class="shadow form-control rounded-pill wide-input-reg" autocomplete="current-password" aria-required="true" placeholder="senha" required />
                    <label asp-for="Password">Senha</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="checkbox">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label class="form-check-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="d-flex shadow align-items-center justify-content-center my-3 mb-0 p-2 w-50 mx-auto btn btn-lg btn-success rounded-pill"><i class="fa-solid fa-right-to-bracket"></i> Entrar</button>
                </div>
            </div>
        </form>
    </div>
</div>