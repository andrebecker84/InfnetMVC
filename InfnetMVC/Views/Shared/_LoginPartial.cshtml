@using Microsoft.AspNetCore.Identity
@using InfnetMVC.ViewModels
@model LoginViewModel

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-controller="Account" asp-action="Logout" method="post" class="form-check-inline">
        <button type="submit" class="btn btn-danger">Sair</button>
    </form>
}
else
{
    <form asp-controller="Account" asp-action="Login" method="post" class="d-flex">
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" required />
        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="senha" required />
        <button type="submit" class="btn btn-primary">Entrar</button>
    </form>

}